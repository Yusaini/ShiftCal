<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShiftCreatorActivity"
    tools:showIn="@layout/activity_shift_creator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1mm"
            android:layout_marginBottom="5mm"
            app:columnCount="2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:text="Name:" />

            <EditText
                android:id="@+id/scEditTextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:text="Short Name:" />

            <EditText
                android:id="@+id/scEditTextSName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:text="Start Time:" />

            <Button
                android:id="@+id/btnStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:background="#bacc3c"
                android:text="00:00" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:text="End Time:" />

            <Button
                android:id="@+id/btnEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1mm"
                android:layout_weight="1"
                android:background="#bacc3c"
                android:ems="5"
                android:text="00:00" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/colorPickerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#bacc3c"
            android:text="Select Color"
            android:padding="1mm"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>